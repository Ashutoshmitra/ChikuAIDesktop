{
  "name": "chiku-ai-desktop",
  "version": "1.0.0",
  "description": "Chiku AI Desktop App",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:main": "tsc --watch",
    "dev:electron": "wait-on dist/main.js && electron dist/main.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "webpack --config webpack.config.js --mode production",
    "start": "electron dist/main.js",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "pack": "npm run build && electron-builder --dir",
    "publish": "npm run build && electron-builder --publish=always"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "babel-loader": "^9.0.0",
    "concurrently": "^8.0.0",
    "css-loader": "^6.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.0.0",
    "style-loader": "^3.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.chiku-ai.desktop",
    "productName": "Chiku AI Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer.html"
    ],
    "mac": {
      "bundleVersion": "1.0.0",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "protocols": [
      {
        "name": "chiku-ai-interview-assistant",
        "schemes": [
          "chiku-ai-interview-assistant"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "Ashutoshmitra",
      "repo": "ChikuAIDesktop"
    }
  },
  "author": "Chiku AI"
}
